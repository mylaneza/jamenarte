<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:id="@+id/spOrden"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/spOrden"
        android:textSize="16sp"
        android:id="@+id/spNombre"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:id="@+id/spDetalle"
        android:layout_below="@id/spNombre"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/spRepeticion"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:layout_below="@id/spRepeticion"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/spTiempos"/>

</RelativeLayout>