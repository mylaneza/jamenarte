    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Miembros"
            android:label="@string/strMiembros"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".Avances"
            android:label="@string/strAvances"
            android:parentActivityName=".Miembros" />
        <activity
            android:name=".Pasos"
            android:label="@string/strPasos"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Sesiones"
            android:label="@string/strSesiones"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SesionesEstudiantes"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".Secuencias"
            android:label="@string/strSecuencias"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".forms.NewAvance"
            android:parentActivityName=".Avances" />
        <activity
            android:name=".forms.NewPaso"
            android:label="@string/strPaso"
            android:parentActivityName=".Pasos" />
        <activity
            android:name=".forms.NewLista"
            android:label="@string/strNuevoAsistente"
            android:parentActivityName=".SesionesEstudiantes"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".forms.NewSesion"
            android:label="@string/strSesion"
            android:parentActivityName=".Sesiones" />
        <activity
            android:name=".forms.NewMiembro"
            android:label="@string/strMiembro"
            android:parentActivityName=".Miembros" />
        <activity
            android:name=".forms.NewSecuencia"
            android:label="@string/strSecuencia"
            android:parentActivityName=".Secuencias" />
        <activity
            android:name=".forms.NewLesson"
            android:label="@string/strLeccion"
            android:parentActivityName=".Lecciones" />
        <activity
            android:name=".Lecciones"
            android:label="@string/strLecciones"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ListaAvances"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QueryAct"
            android:theme="@style/Theme.MaterialComponents.DayNight.Dialog" />
        <activity android:name=".SecuenciaPasos"
            android:label="@string/strPasosSecuencia"/>
        <activity android:name=".forms.NewSecuenciaPaso"
            android:label="@string/strPaso"></activity>
    </application>

</manifest>